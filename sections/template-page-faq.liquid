<div class="container mb-5">
    <div class="row my-5">
        <h1 class="text-center">{{ page.title }}</h1>
    </div>
    <div class="accordion accordion-flush" id="accordionFAQ">
        {% for block in section.blocks %}
            <div class="accordion-item">
                <h2 class="accordion-header" id="collapse-header-{{ block.id }}">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ block.id }}" aria-expanded="false" aria-controls="{{ block.id }}">{{ block.settings.title }}</button>
                </h2>
                <div aria-labelledby="collapse-header-{{ block.id }}" class="accordion-collapse collapse p-3" data-bs-parent="#accordionFAQ" id="collapse-{{ block.id }}">
                    {{ block.settings.answer }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>


{% schema %}
{
    "name": "FAQ",
    "blocks": [
        {
            "name": "FAQ Items",
            "type": "faq",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Titolo",
                    "default": "FAQ Title Example"
                },
                {
                    "type": "richtext",
                    "id": "answer",
                    "label": "Risposta"
                }
            ]
        }
    ]
}
{% endschema %}